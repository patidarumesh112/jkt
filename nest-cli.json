{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nestjs-backend/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/nestjs-backend/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/nestjs-backend",
  "projects": {
    "nestjs-backend": {
      "type": "application",
      "root": "apps/nestjs-backend",
      "entryFile": "main",
      "sourceRoot": "apps/nestjs-backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nestjs-backend/tsconfig.app.json"
      }
    },
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "ingestion-service": {
      "type": "application",
      "root": "apps/ingestion-service",
      "entryFile": "main",
      "sourceRoot": "apps/ingestion-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ingestion-service/tsconfig.app.json"
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    }
  }
}